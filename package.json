{
  "name": "ignite-plugin-json-schema",
  "version": "1.0.2",
  "description": "Generate Documentation based on a json-schema",
  "main": "dist/index.js",
  "init": "dist/init.js",
  "files": [
    "dist/init.js"
  ],
  "scripts": {
    "lint": "xo",
    "build": "babel src -d dist --ignore '**/__tests__/' --copy-files",
    "test": "jest",
    "release": "github-semantic-version --bump --changelog --push --publish"
  },
  "author": "",
  "license": "Apache 2.0",
  "dependencies": {
    "deepmerge": "^2.1.1",
    "json-schema-ref-parser": "^5.0.3",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.2",
    "react": "^16.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hipstersmoothie/ignite-plugin-json-schema"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.52",
    "@babel/core": "^7.0.0-beta.52",
    "@babel/preset-env": "^7.0.0-beta.52",
    "@babel/preset-react": "^7.0.0-beta.52",
    "@babel/preset-stage-3": "^7.0.0-beta.52",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.3.0",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-react": "^7.10.0",
    "github-semantic-version": "^7.6.0",
    "jest": "^23.3.0",
    "jest-junit": "^5.1.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react-test-renderer": "^16.4.1",
    "xo": "^0.21.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "xo-react/space"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": [
      "browser",
      "node",
      "jest"
    ],
    "rules": {
      "no-console": [
        2,
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "max-params": [
        1,
        5
      ],
      "react/jsx-tag-spacing": {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never"
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-stage-3"
    ],
    "plugins": [
      "lodash"
    ]
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "cobertura",
      "html",
      "lcov"
    ]
  },
  "jest-junit": {
    "output": "./coverage/junit/junit.xml"
  },
  "gsv": {
    "startVersion": "1.0.0",
    "majorLabel": "major",
    "minorLabel": "minor",
    "patchLabel": "patch",
    "internalLabel": "internal",
    "releasedLabel": "Released",
    "addReleasedLabelOnSuccess": true
  }
}
